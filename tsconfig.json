{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "dist",
    "sourceMap": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "lib": ["es2015", "dom", "es2015.reflect"]
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "dist"
  ]
}
